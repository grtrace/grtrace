{
	"name": "grtrace", 
	"description": "General Relativity Tracer",
	"copyright": "Copyright Â© 2015, ICM UW",
	"authors": ["Jakub Szewczyk", "Grzegorz Uriasz"],
	"workingDirectory": "bin",
	"homepage": "https://bitbucket.org/kubasz/grtrace",
	"targetType": "executable",
	"targetPath": "bin/",
	"dependencies": {
		"tcltk": "~>8.6.5",
		"derelict-glfw3": ">=2.0.0"
	},
	"mainSourceFile": "source/app.d",
	"lflags-ldc": ["-L=--allow-multiple-definition","-O5"],
	"dflags-ldc": ["-L=--allow-multiple-definition","-O5"],
	"buildTypes": {
		"relinfo": {
			"buildOptions": [
				"releaseMode", "optimize", "inline", "debugInfo", "debugInfoC"
			]
		},
		"avx_ldc": {
			"buildOptions": [
				"releaseMode", "optimize", "inline", "debugInfo"
			],
			"versions": [
				"UseAVX"
			],
			"dflags": [
				"-mcpu=native",
				"-mattr=+sse4.1,+sse4.2,+avx"
			]
		}
	}
}
