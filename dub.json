{
	"name": "grtrace",
	"description": "General Relativity rayTracer",
	"copyright": "Copyright Â© 2016, Jakub Szewczyk&Grzegorz Uriasz",
	"authors": [
		"Jakub Szewczyk",
		"Grzegorz Uriasz"
	],
	"workingDirectory": "bin",
	"license": "MIT",
	"homepage": "https://github.com/grtrace/grtrace",
	"targetType": "executable",
	"targetPath": "bin/",
	"dependencies": {
		"tcltk": "~>8.6.5",
		"derelict-glfw3": "~>3.1.1"
	},
	"mainSourceFile": "source/app.d",
	"lflags-ldc": [
		"-L=--allow-multiple-definition",
		"-O5"
	],
	"dflags-ldc": [
		"-L=--allow-multiple-definition",
		"-O5"
	],
	"buildTypes": {
		"relinfo": {
			"buildOptions": [
				"releaseMode",
				"optimize",
				"inline",
				"debugInfo",
				"debugInfoC"
			]
		},
		"avx_ldc": {
			"buildOptions": [
				"releaseMode",
				"optimize",
				"inline",
				"debugInfo"
			],
			"versions": [
				"UseAVX"
			],
			"dflags": [
				"-mcpu=native",
				"-mattr=+sse4.1,+sse4.2,+avx"
			]
		}
	}
}
